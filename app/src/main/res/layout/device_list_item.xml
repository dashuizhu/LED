<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	
    
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        
    <TextView
        android:id="@+id/textView_name"
        style="@style/text_normal"
        android:textColor="#FFFFFF"
         android:padding="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="device"
        android:background="@null"
        android:focusable="false"
        android:textIsSelectable="true"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/btn_light"
    ></TextView>

    <Button
        android:id="@+id/button_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_alignBaseline="@+id/textView_name"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/cb_green_normal" />

     </RelativeLayout>
     
    <LinearLayout 
        android:id="@+id/layout_control"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@drawable/img_bg_layout"
        android:orientation="horizontal">
    
    
        <Button
            android:id="@+id/button_edit"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:focusable="false"
            android:background="@drawable/bg_null"
            android:drawableTop="@drawable/btn_edit"
          ></Button>
        
    
        
        <Button
            android:id="@+id/button_switch"
            android:layout_height="40dp"
             android:layout_width="match_parent"
            android:layout_weight="1"
             android:paddingTop="6dp"
              android:focusable="false"
            android:background="@drawable/bg_null"
            android:drawableTop="@drawable/btn_switch"
           ></Button>
        
        
        <Button
            android:id="@+id/button_delete"
            android:layout_height="40dp"
              android:layout_width="match_parent"
            android:layout_weight="1"
             android:paddingTop="6dp"
              android:focusable="false"
            android:background="@drawable/bg_null"
            android:drawableTop="@drawable/btn_delete"
            ></Button>
        
    
        
    </LinearLayout>   
   
    

</LinearLayout>
