<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingRight="20dip"
    android:paddingLeft="20dip" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     	android:gravity="center"
     	android:background="@drawable/bg_alert"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content" >
            
            <LinearLayout
	            android:id="@+id/layout_rotate"
	            android:layout_width="match_parent"
	            android:orientation="horizontal"
	            android:gravity="center"
	            android:layout_height="40dp" >
	            
                   <ProgressBar
               android:id="@+id/progressBar_scan"
               android:layout_width="30dp"
               android:layout_height="30dp" 
               android:indeterminateDrawable="@drawable/rotate"
               android:indeterminateOnly="true"
               android:indeterminateBehavior="repeat"
              />
			</LinearLayout>
			
            <LinearLayout
	            android:layout_width="match_parent"
	            android:orientation="horizontal"
	            android:layout_marginBottom="10dp"
	            android:layout_height="wrap_content" >
	            <TextView
	                android:id="@+id/textView_message"
	                android:layout_width="match_parent"
	                android:paddingLeft="20dp"
	                android:paddingRight="20dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:background="@null"
	                android:gravity="center"
	                android:text="End111111111111333333333333333333333333333333333311"
	                android:textColor="#525252"
	                android:textSize="18sp" >
	            </TextView>
            
            </LinearLayout>
            
        </LinearLayout>
       
    </LinearLayout>

</LinearLayout>